<div class="details container">
  <!-- 商品詳細部分 -->
  <div class="product-details">
    <div class="name">
        <h1><%= @product.name %></h1>
    </div>
    <div class="image">
      <%= image_tag "/images/#{@product.image1}"%>
    </div>
    <div class="info">
      <p class="product-category">カテゴリー: <%= @product.category.name %></p>
      <div class="price">
         <h2>¥.<%= @product.price %></h2>
      </div>
      <!-- 自分が出品していない商品のとき購入ボタン表示-->
      <% if @product.user_id != current_user.id %>
        <!-- 状態が出品中のときのみ表示-->
        <% if @product.status == "exhibit" %>
            <div class="topayment">
                <%= link_to "購入する", payment_path(@product) %>
            </div>
        <% end %>
      <% end %>
      <p><%= @product.description %></p> 
    </div>
  </div>
  <%= render partial: 'markets/searchform', :locals => {:val => "details"} %>
</div>