<div class="details container">
  <!-- 商品詳細部分 -->
  <div class="product-details">
    <div class="name">
        <h1><%= @product.name %></h1>
    </div>
    <div class="image">
      <%= image_tag "/images/#{@product.image1}"%>
    </div>
    <div class="info">
      <div class="price">
         <h2>¥.<%= @product.price %></h2>
      </div>
      <% if @product.status == "exhibit" %>
      <div class="topayment">
          <%= link_to "購入する", payment_path(@product), method: :post %>
      </div>
      <% end %>
    </div>
  </div>
  <%= render partial: 'markets/searchform', :locals => {:val => "payment"} %>
</div>