<div class="user container">
  <!-- プロフィール部分 -->
  <div class="detail">
    <div class="status">
        <%= @product.status_i18n %>
    </div>
    <div class="name">
        <h1><%= @product.name %></h1>
    </div>
    <div class="image">
      <%= image_tag "/images/#{@product.image1}" %>
    </div>
    <div class="info">
      <p>カテゴリー: <%=  @product.category.name %></p>
      <div class="price">
        <h2>￥<%= @product.price %></h2>
      </div>
      <p>販売手数料(10%): ￥<%= (@product.price * 0.1).floor %></p>
      <p>販売利益: ￥<%= (@product.price * 0.9).floor %></p>
      <div class="toedit">
        <%= link_to "編集する", product_edit_path(@product) %>
      </div>
      <div class="description">
        <%= @product.description %>
      </div>
      <p class="destroy"><%= link_to "削除する", product_destroy_path(@product), method: :delete %></p>
    </div>
  </div>
  <%= render partial: 'users/mypagenav', :locals => {:val => "product_detail"} %>
</div>